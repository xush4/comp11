#include <iostream>

int main()
{
  using namespace std;
  int hours=0, num=0;
  // Enter Birth year
  cout<<"How old are you?(In years)"<<endl;
  cin>>num;
  hours= 365*24*num;
  cout<<"You have lived for "<< hours <<" hours!"<<endl;
  return 0;
}
